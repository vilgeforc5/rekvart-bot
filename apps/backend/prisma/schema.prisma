generator client {
  provider     = "prisma-client"
  output       = "./generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Command {
  id          Int      @id @default(autoincrement())
  command     String   @unique
  title       String
  description String
  index       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StartContent {
  id        Int      @id @default(1)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ZamerQuestion {
  id        Int            @id @default(autoincrement())
  text      String
  type      String
  order     Int            @unique
  variants  ZamerVariant[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model ZamerVariant {
  id         Int           @id @default(autoincrement())
  text       String
  order      Int
  needsPhone Boolean       @default(false)
  questionId Int
  question   ZamerQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@unique([questionId, order])
}

model ZamerSummary {
  id        Int      @id @default(1)
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
