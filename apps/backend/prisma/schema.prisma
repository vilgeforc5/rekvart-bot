generator client {
  provider     = "prisma-client"
  output       = "./generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Command {
  id             Int      @id @default(autoincrement())
  command        String   @unique
  title          String
  description    String
  index          Int      @default(0)
  showInGreeting Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model StartContent {
  id        Int      @id @default(1)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum FormType {
  CALCULATE
  CONSULTACYA
  ZAMER
}

model Question {
  id        Int               @id @default(autoincrement())
  text      String
  type      String?
  order     Int
  formType  FormType
  variants  QuestionVariant[]
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@unique([formType, order])
}

model QuestionVariant {
  id         Int      @id @default(autoincrement())
  text       String
  order      Int
  needsPhone Boolean  @default(false)
  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([questionId, order])
}

model CalculateSummary {
  id        Int      @id @default(1)
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Portfolio {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  imgSrc      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ConsultacyaSummary {
  id        Int      @id @default(1)
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ZamerSummary {
  id        Int      @id @default(1)
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DizaynContent {
  id          Int      @id @default(1)
  title       String
  description String
  telegramUrl String
  whatsappUrl String
  email       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TelegramUser {
  id              Int              @id @default(autoincrement())
  chatId          String           @unique
  username        String?
  firstName       String?
  lastName        String?
  phone           String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  formSubmissions FormSubmission[]
}

model FormSubmission {
  id             Int          @id @default(autoincrement())
  commandName    String
  data           Json
  telegramUserId Int
  telegramUser   TelegramUser @relation(fields: [telegramUserId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
}
